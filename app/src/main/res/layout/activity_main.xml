<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beauty of Bangladesh"
                android:textAlignment="center"
                android:textSize= "24sp" />

            <Button
                android:id="@+id/nextPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tasbi Page"
                android:layout_marginTop="16dp"/>


            <Button
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Webview Page"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Animation Page"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/loadImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Load Internet Image and Lottie"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/adMobView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Admob View"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/bangladesh"
                android:scaleType="centerCrop"
                android:layout_marginTop="20sp"
                />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginVertical="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bangladesh"
                        android:layout_marginTop="20sp"
                        />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bangladesh"
                        android:layout_marginTop="20sp"
                        android:layout_marginHorizontal="20dp"

                        />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bangladesh"
                        android:layout_marginTop="20sp"

                        />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bangladesh"
                        android:layout_marginTop="20sp"
                        android:layout_marginHorizontal="20dp"
                        />

                </LinearLayout>

            </HorizontalScrollView>



            <TextView
                android:id="@+id/textArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bangladesh is a beautiful South Asian country known for its rich history, vibrant culture, and natural beauty. Home to the Sundarbans, the world's largest mangrove forest, it boasts fertile land, rivers, and diverse traditions. Its people are known for resilience, hospitality, and a strong sense of community and national pride."
                android:textSize= "16sp"
                android:layout_marginBottom="20sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Submit"/>

                <Button
                    android:id="@+id/submit"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Submit Form"
                    android:layout_marginHorizontal="4dp"
                    />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Submit"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/bangladesh"
                android:scaleType="centerCrop"
                android:layout_marginTop="20sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bangladesh is a beautiful South Asian country known for its rich history, vibrant culture, and natural beauty. Home to the Sundarbans, the world's largest mangrove forest, it boasts fertile land, rivers, and diverse traditions. Its people are known for resilience, hospitality, and a strong sense of community and national pride."
                android:textSize= "16sp"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="20sp"
                />

        </LinearLayout>
    </ScrollView>



</LinearLayout>